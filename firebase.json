{
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "storage": {
      "port": 9199
    }
  },
  "storage": {
    "rules": "storage.rules"
  },

  "functions": {
    "source": "functions"
  },

  "hosting": {
    "public": "dist/guiatv/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ],
    "redirects": [
      {
        "source": "/blog",
        "destination": "https://www.clientes.tecnoriasl.com/guiatv",
        "type": 301
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=3600, s-maxage=3600, stale-while-revalidate=3600"
          }
        ]
      }
    ]
  }
}
