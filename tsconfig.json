{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "importHelpers": true,
    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@components/*": [
        "src/app/components/*"
      ],
      "@pages/*": [
        "src/app/pages/*"
      ]
    },
    "lib": [
      "ES2023",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "strictTemplates": true,
    "strictInjectionParameters": true
  }
}