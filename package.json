{
  "name": "guiatv",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev:ssr": "ng run guiatv:serve-ssr",
